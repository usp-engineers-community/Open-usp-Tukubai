#!/usr/local/bin/bash -xv
#
# test script of ratio
#
# usage: ./ratio.test <python ver>

name=ratio
    
tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir
    
com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
#	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1

cat << FIN > $tmp-in
a店 1日目 103  62
b店 1日目 210 113
c店 1日目 81   52
d店 1日目 75   48
e店 1日目 211 140
FIN

cat << FIN > $tmp-out
a店 1日目 103 15.1 62
b店 1日目 210 30.9 113
c店 1日目 81 11.9 52
d店 1日目 75 11.0 48
e店 1日目 211 31.0 140
FIN

${com} key=3 $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.1 error"

cat $tmp-in | ${com} key=3 > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.2 error"

cat $tmp-in | ${com} key=3 - > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.3 error"

cat $tmp-in | ${com} key=NF-1 - > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.4 error"

