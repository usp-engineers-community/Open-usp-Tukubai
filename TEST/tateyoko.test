#!/usr/local/bin/bash -xv
#
# test script of tateyoko 
#
# usage: ./tateyoko.test <command dir> <python ver>

name=tateyoko
    
tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir
    
com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1

cat << FIN > $tmp-in
001 1
001 1.11
001 -2.1
002 0.0
002 1.101
FIN

cat << FIN > $tmp-out
001 001 001 002 002
1 1.11 -2.1 0.0 1.101
FIN

${com} $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1-1 error"

${com} < $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1-2 error"

rm -f $tmp-*
echo "${com}" OK
exit 0
