#!/usr/local/bin/bash -xv
#
# test script of count
#
# usage: ./count.test <python ver>

name=count

tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir

com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
#	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1

cat << FIN > $tmp-in
001 1 942
001 1.3 421
002 -123.0 111
002 123.0 11
FIN

cat << FIN > $tmp-out
001 2
002 2
FIN

${com} 1 1 $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.1 error"

cat $tmp-in | ${com} 1 1 > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1.2 error"

###########################################
#TEST2

cat << FIN > $tmp-in
001 江頭 1 942
001 江頭 1.3 421
002 上山田 -123.0 111
002 上田 123.0 11
FIN

cat << FIN > $tmp-out
001 江頭 2
002 上山田 1
002 上田 1
FIN

${com} 1 2 $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2.1 error"

rm -f $tmp-*
echo "${com}" OK
exit 0
