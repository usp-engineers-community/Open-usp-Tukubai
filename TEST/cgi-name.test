#!/usr/local/bin/bash -xv
#
# test script of cgi-name
#
# usage: ./cgi-name.test <python ver>

name=cgi-name
    
tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir
    
com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1

echo -e 'HOGE=hoge&JPN=%E6%97%A5%E6%9C%AC' > $tmp-in

cat << FIN > $tmp-out
HOGE hoge
JPN 日本
FIN

cat $tmp-in	|
${com} 		> $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1 error"


rm -f $tmp-*
echo "${com}" OK
exit 0
