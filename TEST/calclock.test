#!/usr/local/bin/bash -xv
#
# test script of calclock
#
# usage: ./calclock.test <python ver>

name=calclock
    
tmp=/tmp/$$
dir=$(dirname $0)/..
cd $dir
    
com="$2 ./$1/${name}"
[ "$1" = "" ] && com="./$1/${name}"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
#	rm -f $tmp-*
	exit 1
}

